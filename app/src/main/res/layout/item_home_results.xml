<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_results_item_relative_layout"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/padding_half">

    <FrameLayout
        android:id="@+id/home_results_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/home_results_logo_image_view"
            android:layout_width="@dimen/padding_3x"
            android:layout_height="@dimen/padding_3x"
            android:background="@drawable/background_circle"
            android:src="@mipmap/ic_launcher" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_results_frame"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/home_results_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/typography_body"
            tools:text="Event Name" />

        <TextView
            android:id="@+id/home_results_round_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            tools:text="Event Round" />

    </LinearLayout>
</RelativeLayout>
