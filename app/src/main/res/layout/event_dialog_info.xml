<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nestedScrollView"
    android:layout_alignParentStart="true">


    <RelativeLayout
        android:id="@+id/event_dialogue_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/event_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_half"
            android:layout_marginTop="@dimen/padding_half"
            android:background="@android:drawable/divider_horizontal_bright"
            android:visibility="gone" />
        <FrameLayout
            android:id="@+id/event_card_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_divider"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_default">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView3"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_round" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Round:"
                        android:textSize="@dimen/typography_body"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/event_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_default">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_categories" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Category:"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textSize="@dimen/typography_body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/event_card_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_card_zero">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_default">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView5"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_date" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Date:"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textSize="@dimen/typography_body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_default">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView6"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_time" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Time:"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textSize="@dimen/typography_body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/event_card_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_card_one">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_default"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView7"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_venue" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Venue:"
                        android:textSize="@dimen/typography_body"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_default">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView8"
                        android:layout_marginEnd="@dimen/padding_2x"
                        app:srcCompat="@drawable/ic_team" />
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Size:"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/padding_default"
                        android:textSize="@dimen/typography_body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/event_team_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/imageView9"
                            android:layout_marginEnd="@dimen/padding_2x"
                            app:srcCompat="@drawable/ic_contact" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact:"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/padding_default"
                            android:textSize="@dimen/typography_body"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/event_contact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:text="TextView" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/event_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="125.5dp"
                        android:paddingEnd="@dimen/padding_default"
                        android:text="TextView"
                        android:autoLink="phone"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>