<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include
        android:id="@+id/no_category_data_layout"
        layout="@layout/layout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categories_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/padding_quarter"
        android:paddingLeft="@dimen/padding_quarter"
        android:paddingRight="@dimen/padding_quarter"
        android:paddingStart="@dimen/padding_quarter"
        android:paddingTop="@dimen/padding_quarter">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>