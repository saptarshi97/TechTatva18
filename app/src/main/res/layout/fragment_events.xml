<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="in.mittt.tt18.fragments.EventsFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/events_tab_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeBackground"
        android:elevation="5dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/cardview_light_background" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_tab_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/events_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/events_tab_layout" />
    </android.support.v7.widget.CardView>
</RelativeLayout>